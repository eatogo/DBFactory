<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- 提供連結資料庫所需資訊 -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/eatogodb?useSSL=true&amp;useUnicode=true&amp;characterEncoding=utf8</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password" />
		<property name="hibernate.default_schema">eatogodb</property>
		<!-- 其他進階的組態設定 -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- 設定c3p0連線池的組態 -->
		<property name="hibernate.c3p0.acquire_increment">3</property>
		<property name="hibernate.c3p0.idle_test_period">50000</property>
		<property name="hibernate.c3p0.max_size">8</property>
		<property name="hibernate.c3p0.min_size">3</property>
		<property name="hibernate.c3p0.timeout">300000</property>
		<!-- mapping -->
		<mapping resource="hibernate/_00_init/schemas/user/USERS.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/user/USER_STATUSES.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/user/IDENTITIES.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/store/STORES.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/store/OPERATE_TYPES.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/store/PERIODS.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/food/FOODS.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/food/FOOD_TYPES.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/order/ORDERS.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/order/ORDER_DETAILS.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/favorite/FAVORITES.hbm.xml" />
		<mapping resource="hibernate/_00_init/schemas/review/REVIEWS.hbm.xml" />
	</session-factory>
</hibernate-configuration>
